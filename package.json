{
    "name": "svelte-kit-website-starter",
    "private": true,
    "scripts": {
        "validate": "pnpm --parallel validate",
        "commit": "git-cz",
        "stylelint": "stylelint --color",
        "stylelint:fix": "pnpm stylelint --fix",
        "stylelint:all": "pnpm stylelint \"**/*.{css,svelte}\" \"!volumes\"",
        "stylelint:fix:all": "pnpm stylelint:all --fix",
        "eslint": "eslint --color",
        "eslint:fix": "pnpm eslint --fix",
        "eslint:all": "pnpm eslint \"**/*.{md,json,y?(a)ml,?(c)js,ts}\"",
        "eslint:fix:all": "pnpm eslint:all --fix",
        "lint": "pnpm stylelint:all && pnpm eslint:all",
        "format": "pnpm stylelint:fix:all && pnpm eslint:fix:all",
        "ci": "pnpm validate && pnpm lint",
        "prepare": "husky install"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "config": {
        "commitizen": {
            "path": "cz-customizable"
        },
        "cz-customizable": {
            "config": "./configs/commits/commitizen.js"
        }
    },
    "lint-staged": {
        "*.{md,json,y?(a)ml,js,ts}": "pnpm eslint:fix"
    },
    "prettier": "./configs/prettier/index.js",
    "stylelint": {
        "extends": "./configs/stylelint/index.js",
        "ignoreFiles": [
            "**/.svelte-kit/**/*",
            "**/dist/**/*"
        ]
    },
    "eslintConfig": {
        "extends": "./configs/eslint/index.js",
        "ignorePatterns": [
            "!.travis.yml",
            ".svelte-kit",
            "/volumes",
            "dist",
            "pnpm-lock.yaml"
        ]
    },
    "devDependencies": {
        "@citrus-linting/eslint-config": "0.19.0",
        "@citrus-linting/prettier-config": "0.5.0",
        "@citrus-linting/stylelint-config": "0.4.0",
        "@commitlint/cli": "17.0.2",
        "@ota-meshi/eslint-plugin-svelte": "0.34.0",
        "@types/eslint": "8.4.3",
        "@types/prettier": "2.6.3",
        "@typescript-eslint/eslint-plugin": "5.28.0",
        "@typescript-eslint/parser": "5.28.0",
        "any-eslint-parser": "1.0.1",
        "commitizen": "4.2.4",
        "cz-customizable": "6.3.0",
        "eslint": "8.17.0",
        "eslint-config-prettier": "8.5.0",
        "eslint-plugin-prettier": "4.0.0",
        "husky": "8.0.1",
        "lint-staged": "13.0.1",
        "prettier": "2.6.2",
        "prettier-plugin-svelte": "2.7.0",
        "stylelint": "14.9.1",
        "stylelint-config-prettier": "9.0.3",
        "stylelint-prettier": "2.0.0",
        "svelte": "3.48.0",
        "svelte-eslint-parser": "0.16.3",
        "typescript": "4.7.3"
    }
}
