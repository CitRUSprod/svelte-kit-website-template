{
    "name": "api",
    "private": true,
    "scripts": {
        "dev": "concurrently -k -n b,v -c blue,magenta -p [{name}] pnpm:dev:build pnpm:dev:validate",
        "dev:build": "node esbuild/dev",
        "dev:validate": "pnpm validate -w --preserveWatchOutput",
        "build": "node esbuild/prod",
        "start": "node dist/main",
        "validate": "tsc --pretty --noEmit",
        "prisma": "prisma",
        "prisma:generate": "pnpm prisma generate",
        "prisma:studio": "pnpm prisma studio",
        "prisma:migrations": "pnpm prisma migrate",
        "prisma:migrations:create": "pnpm prisma:migrations dev",
        "prisma:migrations:run": "pnpm prisma:migrations deploy",
        "prisma:migrations:reset": "pnpm prisma:migrations reset",
        "prisma:seeds:run": "pnpm prisma db seed",
        "prepare": "pnpm prisma:generate"
    },
    "engines": {
        "node": ">=18",
        "pnpm": ">=7"
    },
    "prisma": {
        "schema": "src/prisma/schema.prisma",
        "seed": "ts-node -T src/prisma/seeds.ts"
    },
    "devDependencies": {
        "@swc/core": "1.2.198",
        "@types/http-errors": "1.8.2",
        "@types/node": "17.0.42",
        "@types/nodemailer": "6.4.4",
        "@types/uuid": "8.3.4",
        "concurrently": "7.2.1",
        "defu": "6.0.0",
        "esbuild": "0.14.43",
        "esbuild-plugin-clean": "0.9.0",
        "esbuild-plugin-decorator": "0.4.0",
        "esbuild-plugin-node-externals": "0.3.0",
        "esbuild-plugin-run": "0.3.0",
        "prisma": "3.15.1",
        "source-map-support": "0.5.21",
        "ts-node": "10.8.1",
        "type-fest": "2.13.1",
        "typescript": "4.7.3"
    },
    "dependencies": {
        "@fastify/auth": "2.0.0",
        "@fastify/cookie": "6.0.0",
        "@fastify/jwt": "5.0.1",
        "@fastify/swagger": "6.1.0",
        "@prisma/client": "3.15.1",
        "@segment/ajv-human-errors": "2.1.2",
        "@sinclair/typebox": "0.23.5",
        "ajv": "8.11.0",
        "ajv-formats": "2.1.1",
        "ajv-keywords": "5.1.0",
        "argon2": "0.28.5",
        "dotenv": "16.0.1",
        "dotenv-expand": "8.0.3",
        "fastify": "3.29.0",
        "fastify-plugin": "3.0.1",
        "fastify-socket.io": "3.0.0",
        "http-errors": "2.0.0",
        "nodemailer": "6.7.5",
        "socket.io": "4.5.1",
        "socketio-jwt-auth": "0.2.1",
        "tslib": "2.4.0",
        "uuid": "8.3.2"
    }
}
